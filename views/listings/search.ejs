<% layout("/layouts/boilerplate") %>
<body>
    <h1>Search Results</h1>

    <% if(results.length > 0) { %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let result of results) { %>
                <a href="/listings/<%= result._id %>" class="listing-link">
                <div class="card col listing-card">
                    <div class="card-img-overlay"></div>
                    <img src="<%= result.image.url %>"" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= result.title %></b> <br>
                            &#8377; <%= result.price.toLocaleString("en-IN"); %> / night
                        </p>
                    </div>
                </div>
                </a>
            <% } %>
        </div>
    <% } else { %>
        <p>No search results found!!</p>
    <% } %>
</body>